{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ilv",
	"patterns": [
		{
			"include": "#Comment"
		},
		{
			"include": "#SubKey"
		},
		{
			"include": "#MainKey"
		},
		{
			"include": "#String"
		},
		{
			"include": "#Operator"
		},
		{
			"include": "#Number"
		},
		{
			"include": "#Braces"
		}
	],
	"repository": {
		"SubKey": {
			"patterns": [{
				"name": "keyword.declaration.ilv_chang_hsh",
				"match": "\\$\\s*(date|title|subtitle|audio|author|semester|chapter|course|width|height|startTime|duration|position|questionContent|content|correctAnswer|wrongAnswers|tip|id|page|name|inPage|fontSize|fontFamily|type|path|last|moveTo|elementType|elementId|toPosition|toScale|emphasisTime|strokeColor|strokeWidth|font|script|style|zIndex)"
			}]
		},
		"MainKey": {
			"patterns": [{
				"name": "keyword.control.ilv_chang_hsh",
				"match": "\\^\\s*(custom|slide|text|quiz|image|video|graphics|cursor|transformation)"
			}]
		},
		"String": {
			"name": "string.quoted.double.ilv_chang_hsh",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ilv_chang_hsh",
					"match": "\\\\."
				}
			]
		},
		"Operator": {
			"patterns": [{
				"name": "entity.other.attribute-name",
				"match": "\\=|\\;|\\,"
			}]
		},
		"Number": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "(-)?(?:((?:\\b\\d+(?:\\.\\d*)?|\\.\\d+)(?:\\b|e-?\\d+\\b)%?)|(\\$[0-9a-fA-F]+\\b))"
			}]
		},
		"Comment": {
			"name": "comment.block",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{
					"name": "comment.block",
					"match": "\\\\."
				}
			]
		},
		"Braces": {
			"patterns": [
				{
					"name": "meta.tag",
					"match": "\\[|\\]|\\(|\\)|\\{|\\}"
				}
			]
		}
	},
	"scopeName": "source.ilv"
}