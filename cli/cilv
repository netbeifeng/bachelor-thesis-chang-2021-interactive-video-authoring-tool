#! /usr/bin/env node

const program = require('commander');
const inquirer = require('inquirer');
const chalk = require('chalk');
const fs = require('fs');
const os = require('os');
const path = require('path');
const shell = require("shelljs");
const fse = require('fs-extra');
const openExplorer = require('open-file-explorer');

var initPath = "";

program
    .command('check')
    .alias('c')
    .description('check the current version')
    .action(option => {
        console.log(printItalicBold('cilv v0.2.0'));
        if (shell.exec('concurrently -v').code == 1) {
            console.log('Missing global dependency detected... âŒ');
            console.log('Pre-installing...');
            console.log(chalk.default.bold('Fetching `Concurrently` library from npm...ðŸ“¦'));
            console.log(shell.exec('npm install concurrently -g').stdout);
        } else {
            console.log('No Missing Dependency. âœ…');
        }
    });

program
    .command('init')
    .alias('i')
    .description('init file')
    .action(option => {
        let config = {
            fileName: null
        };
        // console.log(chalk.default.bold('cilv v0.0.1'));

        if (process.argv[3]) {
            prepareILV(process.argv[3]);
        } else {
            let promps = [];
            if (config.fileName === null) {
                promps.push({
                    type: 'input',
                    name: 'fileName',
                    message: 'Please input the ilv file name',
                    validate: input => {
                        if (!input) {
                            return 'The file name can\'t be empty';
                        }
                        config.fileName = input;
                        return true;
                    }
                });
            }

            inquirer.prompt(promps).then(async (answers) => {
                prepareILV();
            });
        }
        function prepareILV(fileName) {
            let template = fs.readFileSync(path.resolve(__dirname + '/template.ilv'), 'utf-8')
                .replace("USERPLACEHOLDER", os.userInfo().username);

            fs.writeFile(`${process.cwd()}\\${fileName}.ilv`, template, 'utf8', function (error) {
                if (error) {
                    console.log(error);
                    return false;
                } else {
                    console.log(chalk.bold(fileName + '.ilv document is successfully created.'));
                }
            });
        }
    });

program
    .command('deploy')
    .alias('d')
    .description('listen ilv')
    .action(option => {
        let config = {
            fileName: null
        };
        // console.log(chalk.default.bold('cilv v0.0.1'));

        if (process.argv[3]) {
            parseILV(process.argv[3]).then((res) => {
                if (res) {
                    startILV(process.argv[3]);
                }
            });
        } else {
            let promps = [];
            if (config.fileName === null) {
                promps.push({
                    type: 'input',
                    name: 'fileName',
                    message: 'Please input the ilv file name',
                    validate: input => {
                        if (!input) {
                            return 'The file name can\'t be empty';
                        }
                        config.fileName = input;
                        return true;
                    }
                });
            }

            inquirer.prompt(promps).then(async (answers) => {
                console.log(answers);
                if (answers.fileName) {
                    parseILV(answers.fileName).then((res) => {
                        if (res) {
                            startILV(answers.fileName);
                        }
                    });
                }
            });
        }
    });

program
    .command('build')
    .alias('b')
    .description('build ilv')
    .action(option => {
        let config = {
            fileName: null
        };
        // console.log(chalk.default.bold('cilv v0.0.1'));

        if (process.argv[3]) {
            parseILV(process.argv[3]).then((res) => {
                if (res) {
                    // startILV(process.argv[3]);
                    buildILV();
                }
            });
        } else {
            let promps = [];
            if (config.fileName === null) {
                promps.push({
                    type: 'input',
                    name: 'fileName',
                    message: 'Please input the ilv file name',
                    validate: input => {
                        if (!input) {
                            return 'The file name can\'t be empty';
                        }
                        config.fileName = input;
                        return true;
                    }
                });
            }

            inquirer.prompt(promps).then(async (answers) => {
                console.log(answers);
                if (answers.fileName) {
                    parseILV(answers.fileName).then((res) => {
                        if (res) {
                            // startILV(answers.fileName);
                            buildILV();
                        }
                    });
                }
            });
        }
    });

program.parse(process.argv);

